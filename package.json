{
  "name": "yomu",
  "version": "0.1.0",
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:e2e:auth": "playwright test tests/e2e/auth.spec.ts",
    "test:e2e:dashboard": "playwright test tests/e2e/dashboard.spec.ts",
    "test:e2e:dark-mode": "playwright test tests/e2e/dark-mode.spec.ts",
    "test:e2e:report": "playwright show-report",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:dark-mode": "jest --testPathPatterns=\".*DarkMode.*\"",
    "test:color-contrast": "jest --testPathPatterns=\".*color-contrast.*\"",
    "test:partnerships": "node tests/integration/final-multi-brand-test.js",
    "test:api": "node tests/integration/api/test-api.js",
    "test:translations": "node tests/integration/test-missing-translations.js",
    "test:connection": "node tests/integration/test-connection.js",
    "test:docker": "node scripts/test-docker.js",
    "verify:docker": "npm run test:docker",
    "admin:help": "node scripts/admin-helper.js",
    "db:seed": "node scripts/seed.js",
    "assets:brands": "node scripts/download-brand-logos.js",
    "prepare": "husky",
    "db:studio": "npx prisma studio",
    "commit": "cz",
    "lint:commits": "commitlint --from=HEAD~20 --to=HEAD",
    "ci:test": "npm run ci:lint && npm run ci:build && npm run ci:test:unit && npm run ci:test:translations",
    "ci:lint": "npm run lint",
    "ci:build": "npm run build",
    "ci:test:unit": "npm run test:coverage",
    "ci:test:translations": "npm run test:translations",
    "ci:docker": "npm run test:docker",
    "ci:audit": "npm audit --omit=dev --audit-level=moderate",
    "ci:format:check": "npm run format:check",
    "ci:all": "npm run ci:test && npm run ci:docker && npm run ci:audit && npm run ci:format:check",
    "ci:quick": "node scripts/quick-ci-check.js",
    "ci:full": "node scripts/test-ci-local.js",
    "ci:simulate": "node scripts/simulate-github-actions.js",
    "pre-ci": "npm ci && npm run prisma:generate"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.16.1",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.540.0",
    "next": "^15.5.3",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "type-check": "^0.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.2",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prisma": "^6.16.1",
    "tailwindcss": "^4",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "lodash": "^4.17.21",
    "merge": "^2.1.1",
    "minimist": "^1.2.8",
    "shelljs": "^0.8.5",
    "tmp": "^0.2.4",
    "external-editor": "^3.1.0",
    "inflight": "npm:lru-cache@^10.0.0",
    "glob": "^10.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run test -- --bail --findRelatedTests"
    ],
    "tests/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run test -- --bail --findRelatedTests"
    ],
    "*.config.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    ".commitlintrc.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
